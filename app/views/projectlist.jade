extends layout

mixin project-card(project)
  li.media
    img(class="d-flex align-self-center mr-3", src="/images/#{project.thumbnail}", width=100, height=100)
    div.media-body
      h4(class="mt-0 mb-1")= project.title
      p.card-text= project.description

block content
  h1 Projects
  ul.list-unstyled
    for project in projectlist
      +project-card(project)
