  .row
    .col-md-offset-4.col-md-4.text-center
      h1 Contact Us!
      h3 Question Form
      .well
        form(action='/contactus/send', method='post')
          .well
            label(for='name') Name:
            input(type='text', name='name')
            br
            br
            label(for='email') Email:
            input(type='text', name='email')
            br
            br
            label(for='question') Put your question here:
            #questionbox
              textarea(name='question', style='height: 200px;width: 331px;margin: 0px;resize: none;')
            button.btn.btn-md.btn-success(type='submit', value='question') Submit your question!
